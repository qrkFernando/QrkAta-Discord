{
  "name": "qrkata-chat",
  "version": "1.0.0",
  "description": "Chat moderno estilo Discord con React, Node.js y MongoDB",
  "main": "server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "install-deps": "cd server && npm install && cd ../client && npm install",
    "test-db": "node test-connection.js",
    "setup": "npm run install-deps && npm run test-db"
  },
  "keywords": [
    "chat",
    "discord",
    "react",
    "nodejs",
    "mongodb",
    "socket.io",
    "real-time"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "mongoose": "^8.0.3",
    "dotenv": "^16.3.1"
  }
}